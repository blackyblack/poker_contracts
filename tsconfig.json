{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "./typechain-types/**/*",
    "./scripts/**/*",
    "./test/**/*",
    "./examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "dist"
  ]
}