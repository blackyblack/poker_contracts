{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Hardhat: Debug All Tests",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "hardhat",
                "test"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "smartStep": true,
            "autoAttachChildProcesses": true,
            "env": {
                "FORCE_COLOR": "1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Hardhat: Debug Current Test File",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "hardhat",
                "test",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "smartStep": true,
            "autoAttachChildProcesses": true,
            "env": {
                "FORCE_COLOR": "1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Hardhat: Debug Tests (grep)",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "hardhat",
                "test",
                "--grep",
                "${input:mochaGrep}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "smartStep": true,
            "autoAttachChildProcesses": true,
            "env": {
                "FORCE_COLOR": "1"
            }
        }
    ],
    "inputs": [
        {
            "id": "mochaGrep",
            "type": "promptString",
            "description": "Mocha grep pattern",
            "default": ""
        }
    ]
}